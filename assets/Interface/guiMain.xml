<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<nifty xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://nifty-gui.lessvoid.com/nifty-gui" xsi:schemaLocation="https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
    <screen id="start" controller="mygame.StartScreen">
        <layer id="background" backgroundColor="#000f"/>
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_top" height="25%" backgroundColor="#f008" width="75%" align="center" childLayout="center"/>
            <panel id="panel_mid" height="50%" backgroundColor="#0f08" width="75%" align="center" childLayout="center"/>
        </layer>
    </screen>
    <screen id="hud">
        <layer id="GLayer2" backgroundColor="#000f"/>
        <layer id="GLayer3" backgroundColor="#0000" childLayout="horizontal">
            <panel id="panel_left" height="100%" backgroundColor="#0f08" width="80%" childLayout="vertical"/>
            <panel id="panel_right" height="100%" backgroundColor="#00f8" width="20%" childLayout="vertical">
                <panel id="panel_top_right1" height="15%" backgroundColor="#00f8" width="100%" childLayout="center"/>
                <panel id="panel_top_right2" height="15%" backgroundColor="#44f8" width="100%" childLayout="center"/>
                <panel id="panel_bot_right" height="70%" backgroundColor="#88f8" width="100%" valign="center"/>
            </panel>
        </layer>
        <layer id="GLayer4" childLayout="absolute"/>
    </screen>
    <screen id="GScreen2"/>
</nifty>
